<zk xmlns="http://www.zkoss.org/2005/zul">
	<vlayout id="editWindowLayout"
		apply="org.hpccsystems.dashboard.manage.widget.XYChartController"
		style="background-color: white;">
		<hlayout id="editLayout">
			<vbox spacing="0em">
				<listbox width="200px" height="270px" id="measureListbox">
					<listhead>
						<listheader label="${labels.measures}"></listheader>
					</listhead>
				</listbox>
				<listbox width="200px" height="270px" id="attributeListbox">
					<listhead>
						<listheader label="${labels.attributes}"></listheader>
					</listhead>
				</listbox>
			</vbox>

			<vbox spacing="0em">	
				
				<listbox width="200px" height="270px" id="chartMeasureListbox" droppable="true">
					<listhead>
						<listheader label="${labels.chartMeasures}"></listheader>
					</listhead>
				</listbox>
				<listbox width="200px" height="270px" id="chartAttributeListbox" droppable="true">
					<listhead>
						<listheader label="${labels.chartAttributes}"></listheader>
					</listhead>
				</listbox>
				<include id="filterHolder"></include>
				
			</vbox>

			<div vflex="1" hflex="1"
				style="border: 1px solid; border-color: rgb(184, 177, 177);"
				id="chart">

			</div>

		</hlayout>
	</vlayout>

</zk>

