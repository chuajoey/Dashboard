<zk xmlns="http://www.zkoss.org/2005/zul">
	<vlayout id="editWindowLayout"
		apply="org.hpccsystems.dashboard.controller.EditChartController"
		style="background-color: white;">
		<hlayout id="editLayout">
			<vbox spacing="0em">
				<panel title="${labels.measures}" height="270px" sclass="editPanel">
					<panelchildren>
						<tabbox id="measureTabbox" vflex="1" width="200px" mold="accordion" >
						  	<tabs>	</tabs>
						  	<tabpanels> </tabpanels>
						</tabbox>
					</panelchildren>
				</panel>
				<panel title="${labels.attributes}" height="270px" sclass="editPanel">
					<panelchildren>
						<tabbox id="attributeTabbox" vflex="1" width="200px" mold="accordion" >  
						  	<tabs> </tabs>
							<tabpanels>	</tabpanels>
						</tabbox> 	
					</panelchildren>
				</panel>
			</vbox>

			<vbox spacing="0em">	
				<panel height="180px" title="${labels.chartMeasures}" sclass="editPanel">
				<caption>
					<popup id="minMaxPopup" zclass="popup" width="220px">
						<listbox id="primaryListbox" style="overflow:auto">
							<listhead>
								<listheader label="Chart Measure Options">
									<button id="minMaxSaveBtn" sclass="glyphicon glyphicon-ok btn btn-link img-btn" style="float:right"></button>
								</listheader> 
							</listhead>
							<listitem>
								<listcell>
									<checkbox id="secondAxisCheck" label="${labels.enableSecAxis}" zclass="checkbox"></checkbox>
								</listcell>
							</listitem>
							
							<listitem id="rotateAxisListItem" visible="false">
								<listcell>
									<checkbox id="rotateAxis" label="${labels.rotateAxis}" zclass="checkbox"></checkbox>
								</listcell>
							</listitem>
							
								<listitem>
								<listcell>
										<checkbox id="yThresholdCheckBox" label="Use dynamic thresholds" sclass="checkbox"/>
										<div id="yThresholdComboDiv" visible="false">
										<combobox id="yThresholdCombo" readonly="true" hflex="1" sclass="list-combo"  width="150px" placeholder="Threshold" ></combobox>
										</div>
								</listcell>
							</listitem>
							</listbox>
							<listbox nonselectableTags="*">
							<listhead>
								<listheader label="${labels.primaryAxis}">
								</listheader> 
							</listhead>
							<listitem>
								<listcell>
									<vlayout hflex="1">
										<label value="Axis Scale" style="font-weight: 600;"/>
										<hlayout>
											<doublebox id="yAxisMinVal" placeholder="${labels.yAxisStart}" zclass="form-control" hflex="1" />
											<doublebox id="yAxisMaxVal" placeholder="${labels.yAxisEnd}" zclass="form-control" hflex="1" />
										</hlayout>
									</vlayout>
								</listcell>
							</listitem>
							<listitem>
								<listcell>
									<vlayout hflex="1" id="yMinMaxThreshold">
										<label value="Threshold Lines" style="font-weight: 600;"/>
										<hlayout>
											<doublebox id="yAxisThresholdMin" zclass="form-control" hflex="1" placeholder="Minimum"/>
											<doublebox id="yAxisThresholdMax" zclass="form-control" hflex="1" placeholder="Maximum"/>
										</hlayout>
									</vlayout>
								</listcell>
							</listitem>
							
							</listbox>
							<listbox id="y2MinMax" visible="false">
							<listhead>
								<listheader label="${labels.secondaryAxis}">
								</listheader> 
							</listhead>
								<listitem>
								<listcell>
									<checkbox id="secondAxisHideCheck" label="${labels.hideAxis}" zclass="checkbox"></checkbox>
								</listcell>
							</listitem>
								<listitem>
								<listcell>
									<vlayout hflex="1">
										<label value="Axis Scale" style="font-weight: 600;"/>
										<hlayout>
											<doublebox id="y2AxisMinVal" placeholder="${labels.yAxisStart}" zclass="form-control" hflex="1" />
											<doublebox id="y2AxisMaxVal" placeholder="${labels.yAxisEnd}" zclass="form-control" hflex="1" />
										</hlayout>
									</vlayout>
								</listcell>
							</listitem>
							<listitem>
								<listcell>
									<vlayout hflex="1" id="y2MinMaxThreshold">
										<label value="Threshold Lines" style="font-weight: 600;"/>
										<hlayout>
											<doublebox id="y2AxisThresholdMin" zclass="form-control" hflex="1" placeholder="Minimum"/>
											<doublebox id="y2AxisThresholdMax" zclass="form-control" hflex="1" placeholder="Maximum"/>
										</hlayout>
									</vlayout>
								</listcell>
							</listitem>
						 </listbox>						
					</popup>
					<button id="yAxisConfigBtn" visible="false" iconSclass="glyphicon glyphicon-wrench"
						popup="minMaxPopup, position=end_before" 
						sclass="btn btn-link img-btn"  style="float:right" />
				</caption>
					<panelchildren>
						<vbox vflex="1" id="measureContainer">
							<listbox width="200px" vflex="1" id="yAxisListbox" droppable="true">
							</listbox>
							<listbox width="200px" height="75px" id="y2AxisListbox" droppable="true" visible="false">
								<listhead>
									<listheader label="Secondary Chart Measures"></listheader>
								</listhead>
							</listbox>
						</vbox>
					</panelchildren>
				</panel>

				<vbox height="160px">
					<panel vflex="1" title="${labels.chartAttributes}" sclass="editPanel">
						<caption>
							<popup id="dateFormatPopup" zclass="popup">

							</popup>
							<button iconSclass="glyphicon glyphicon-calendar" 
								popup="dateFormatPopup, position=end_center"
								sclass="btn btn-link img-btn" style="float:right" />
						</caption>
						<panelchildren>
							<listbox width="200px" vflex="1" id="xAxisListbox" droppable="true">
							</listbox>
						</panelchildren>
					</panel>

					<panel  vflex="1" title="Group" sclass="editPanel"
						if="${$composer.showGroupPanel}">
						<panelchildren>
							<listbox width="200px" vflex="1" id="groupListbox" droppable="true">
							</listbox>
						</panelchildren>
					</panel>
				</vbox>

				<include id="filterHolder"></include>
				
			</vbox>

			<div vflex="1" hflex="1"
				style="border: 1px solid; border-color: rgb(184, 177, 177);"
				id="chart">

			</div>

		</hlayout>
	</vlayout>

</zk>

