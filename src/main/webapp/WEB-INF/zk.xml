<?xml version="1.0" encoding="UTF-8"?>

<zk>
	<!-- [Optional]
	Uncomment if you want to defines the application's name 
	
	<preference>
		<name>org.zkoss.zk.ui.WebApp.name</name>
		<value>Dashboard</value>
	</preference>
	-->
	<!-- API Richlets -->
	<richlet>
	   <richlet-name>chartSettings</richlet-name>
	   <richlet-class>org.hpccsystems.dashboard.api.ChartSettings</richlet-class>
	</richlet>
	<richlet-mapping>
	    <richlet-name>chartSettings</richlet-name>
	    <url-pattern>/api/chart_config/*</url-pattern>
	</richlet-mapping>
	<!-- API Richlets -->
	
	<session-config>
    	<device-type>ajax</device-type>    
    	<timeout-uri></timeout-uri>    
	</session-config>
	
	<error-page>
	    <exception-type>java.lang.Throwable</exception-type>    
	    <location>/error.zul</location>    
	</error-page>
</zk>
