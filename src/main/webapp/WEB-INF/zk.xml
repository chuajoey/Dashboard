<?xml version="1.0" encoding="UTF-8"?>

<zk>
	<!-- [Optional]
	Uncomment if you want to defines the application's name 
	
	<preference>
		<name>org.zkoss.zk.ui.WebApp.name</name>
		<value>Dashboard</value>
	</preference>
	-->
	
	<library-property>
	    <name>org.zkoss.theme.preferred</name>
	    <value>silvertail</value>
	</library-property>

	
	<!-- API Richlets -->
	
	<session-config>
    	<device-type>ajax</device-type>    
    	<timeout-uri></timeout-uri>    
	</session-config>
	
	<system-config>
   		<label-location>/WEB-INF/label.properties</label-location>
   		
   		<!-- [Optional]
		Uncomment while running test suite
	    <id-generator-class>org.zkoss.zk.ui.impl.StaticIdGenerator</id-generator-class>
		-->
	</system-config>
	
	<listener>
        <description>Initializer for HIPIE Service</description>
        <listener-class>org.hpccsystems.dashboard.service.hipie.HipieSingleton</listener-class>
	</listener>

	<!-- <error-page>
	    <exception-type>java.lang.Throwable</exception-type>    
	    <location>/error.zul</location>    
	</error-page> -->
</zk>
